---
import "@fontsource/inter";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" href="/favicon.ico?" type="image/x-icon">

    <script type="text/javascript" src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js" async></script>
    <meta charset="UTF-8" />

    <meta name="description" content="Boost your business with SEALNEXT. We offer SEO-friendly web development, custom mobile apps, and digital marketing strategies tailored to your needs." />
    <meta name="keywords" content="sealnext, web development, mobile apps, custom software, digital marketing, SEO, SEM, social media management, business scalability, iOS development, Android development, mobile development, software development agency" />
    <title>SealNext - Scale your Business with Custom Software</title>
    <link rel="canonical" href="https://sealnext.com/" />

        <!-- Schema Markup for SEO -->
        <script type="application/ld+json">
          {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "name": "SealNext",
            "alternateName": ["SealNext Software Development", "SealNext Software", "SealNext Custom Software","sealnext", "SealNext.com"],
            "headline": "SealNext - Scale your Business with Custom Software",
            "description": "Boost your business with SEALNEXT. We offer SEO-friendly web development, custom mobile apps, and digital marketing strategies tailored to your needs.",
            "keywords": "sealnext, web development, mobile apps, custom software, digital marketing, SEO, SEM, social media management, business scalability, iOS development, Android development, mobile development, software development agency"
          }
          </script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,500,0,0&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0&display=swap" />
    
  </head>
  <body >
    <div id="main">
    <slot />
    </div>
  </body>
</html>


<style is:global>

  body {
    display: flex;
  justify-content: center;
  align-items: flex-start; /* sau "center" dacă vrei să fie centrat pe verticală */
  min-height: 100vh;
  margin: 0;
}

#main {
  max-width: 1300px;
  width: 100%;
}

:root {
    font-size: 16px;
}

@media only screen and (min-width: 1801px) {
  :root {
    font-size: 17px;
  }
  #main {
  max-width: 1450px;
  }
}

@media only screen and (min-width: 2501px) {
  :root {
    font-size: 18px;
  }
  #main {
  max-width: 1750px;
  }
}

@media only screen and (max-width: 350px) {
  :root {
    font-size: 12px;
}
}

@font-face {
  font-family: 'Inter';
  src: url('/fonts/inter-latin-700-normal.woff') format('woff');
  font-weight: 700; /* sau orice altă valoare specfică */
  font-style: normal; /* sau italic etc. */
  font-display: swap; /* foarte important pentru optimizare */
}

  html {
    -webkit-font-smoothing: unset;
    -moz-osx-font-smoothing: unset;
    color: hsl(var(--colour-text-hue) var(--colour-text-saturation) var(--colour-text-luminance));

        scroll-behavior: smooth;
  }
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
  body {
    font-family: "Inter";
  }
  /* for debug purposes */
  .debug-screens::before {
    position: fixed;
    z-index: 2147483647;
    bottom: 0;
    left: 0;
    padding: .3333333em .5em;
    font-size: 12px;
    line-height: 1;
    font-family: sans-serif;
    background-color: #000;
    color: #fff;
    box-shadow: 0 0 0 1px #fff;
    content: 'screen: _';
  }
  @screen sm {
    .debug-screens::before {
        content: 'screen: sm';
    }
  }
  @screen md {
    .debug-screens::before {
        content: 'screen: md';
    }
  }
  @screen lg {
    .debug-screens::before {
        content: 'screen: lg';
    }
  }
  @screen xl {
    .debug-screens::before {
        content: 'screen: xl';
    }
  }
  @screen 2xl {
    .debug-screens::before {
        content: 'screen: 2xl';
    }
  }
</style>
